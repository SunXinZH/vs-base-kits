{
  "compilerOptions": {
    "target": "es5", 
    "downlevelIteration": true,
    "lib": ["es5", "es2015", "dom"],
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "paths": {}
  },
  "include": ["src"],
  "exclude": ["test", "node_modules", "dist", "my-test"]
}
