{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "lib": ["dom", "es2021"],
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "pretty": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./dist",
        "paths": {}
    },
    "include": ["src"],
    "exclude": ["test", "node_modules", "dist", "my-test"]
}
